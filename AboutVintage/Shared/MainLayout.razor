@inherits LayoutComponentBase

    <BlazoredToasts />

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">
        <AuthorizeView>
            <Authorized>
                <a class="ml-md-auto">Welcome @context.User.Claims.Where(s => s.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name").FirstOrDefault().Value.Split(" ")[0]</a>
                <img style="border-radius: 50%; margin-left: 10px" height="40px" width="40px" src="@context.User.Claims.Where(s => s.Type == "picture").FirstOrDefault().Value" />
            </Authorized>
        </AuthorizeView>
    </div>

    <div class="content px-4">
        @Body
    </div>
</div>
